@model StudentRegistrationSys.Models.ViewModels.StudentDashboardInfo

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_stu.cshtml";
}
<link href="~/css/StudentDashboardcss.css" rel="stylesheet" />
<div class="container-fluid container-m">
    <div class="imx">
        <div class="bio">
            <h5>Profile</h5>
            <div class="img-par">
                <img class="rounded-circle" src="https://media.istockphoto.com/id/1337144146/vector/default-avatar-profile-icon-vector.jpg?s=612x612&w=0&k=20&c=BIbFwuv7FxTWvh5S3vB6bkT0Qv8Vn8N5Ffseq84ClGI=" />
              
                    <div class="group-1">
                        <span>Name - @Model.ProfileDashboards.Name</span>
                        <span>Account - @Model.ProfileDashboards.AccountId</span>
                        <span>Year - @Model.ProfileDashboards.YearLevelName</span>
                    </div>               

                <div class="group-2">
                    <span>Email - @Model.ProfileDashboards.Email</span>
                    <span>Phone - @Model.ProfileDashboards.Phone</span>
                    <span>Address - @Model.ProfileDashboards.Address</span>
                </div>
            </div>
        </div>
        <div class="course">
            <h5>Courses</h5>
            <div class="course-par">
                <div class="c-group-1">
                    @if (Model.CourseDashboards.Count != 0)
                    {
                        @for (var i = 0; i < Model.CourseDashboards.Count; i++)
                        {

                    <span style="font-size:0.8rem;"><i class="bi bi-book-half"></i>&nbsp;@Model.CourseDashboards[i].CourseName&nbsp;(@Model.CourseDashboards[i].CourseCode)</span>
                        }

                    }
                    else
                    {
                        <span>No Course selected yet</span>
                    }

                </div>
                @*<div class="c-group-2">
                    @for (var i = 3; i < 5; i++)
                    {

                    <span><i class="bi bi-book-half"></i>&nbsp;&nbsp;@Model.CourseDashboards[i].CourseName</span>                   
                    }
                </div>*@
                </div>
        </div>

        <div class="mix">
            <div class="result">
                <h5>Previous Result</h5>
                <ul class="list-group mt-1">
                    @for (var i = 0; i < Model.ResultDashboards.Count ; i++)
                    {
                        <li class="list-group-item">
                            <div class="result-li">
                                <span>@Model.ResultDashboards[i].CourseName</span>
                                <span class="badge badge-primary" style="font-size:1rem;">@Model.ResultDashboards[i].Grade</span>
                            </div>
                        </li>
                    }
                    </ul>
            </div>
            <div class="timetable">
                <h5>TimeTable</h5>
                @if (Model.TimeTableInfocsDetails.Count != 0)
                {
                    <table id="myTable" class="table table-striped table-bordered" style="width:100%;font-size:10px;margin-top:1rem;">
                        <thead>
                            <tr class="bg-primary" style="color:#fff;">
                                <th width="70">
                                </th>
                                <th>
                                    Period 1
                                </th>
                                <th>
                                    Period 2
                                </th>
                                <th>
                                    Period 3
                                </th>
                                <th>
                                    Period 4
                                </th>
                                <th>
                                    Period 5
                                </th>
                                <th>
                                    Period 6
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var j = 0; j < 5; j++)
                            {

                                var temp_day = "";
                                switch (j)
                                {
                                    case 0:
                                        temp_day = "Mon";
                                        break;
                                    case 1:
                                        temp_day = "Tue";
                                        break;
                                    case 2:
                                        temp_day = "Wed";
                                        break;
                                    case 3:
                                        temp_day = "Thurs";
                                        break;
                                    case 4:
                                        temp_day = "Fri";
                                        break;
                                    default:
                                        // code block
                                        break;
                                }

                                <tr>
                                    <td style="background-color: #7571f9b5;">
                                        <span style="color:#fff;">@temp_day</span>
                                    </td>

                                    @for (var i = 0; i < 6; i++)
                                    {

                                        <td>
                                            <span>@Model.TimeTableInfocsDetails[i + (j * 6)].CourseCode</span>
                                        </td>

                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                }
                else
                {
                    <span style="margin-top:6rem;font-size:2rem;display:flex;justify-content:center;">You are not registered yet!</span>
                }

            </div>

        </div>
    </div>
</div>
